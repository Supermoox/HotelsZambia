 <div class="row">


 <h4 class="page-header">My Accommodations</h4>
    <% if @accommodations.blank? %>
    <hr>
     <h3> You have no accommodation</h3>
     <h3> <%= link_to "Add An Accommodation", new_accommodation_path %> </h3>
     
     <% else %>
     <% @accommodations.each do |accommodation| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                 <p style="font-size: xx-small; color:white;"> <%=  @wallpaper = Wallpaper.where(accommodation_id: accommodation.id).first %> </p>
                <div class="col-sm-3 ">
                  <div class="thumbnail">
                  <% if !@wallpaper.blank? %>
                 
                    <%= link_to (image_tag @wallpaper.image, class: 'image'), accommodation %>                   
                  </div>   
                  <% end %>  
                </div>      
                <div class="col-sm-9 ">
                  <div class="product">
                    <h4 class="product-name">               
                        <%= accommodation.name %>
                    </h4>
                 
                    <div id="product-footer">
                        <div>
                          <span class="location">
                            <svg viewBox="0 0 12 12">
                              <path d="M6 5.7c.4 0 .7-.1.9-.4.3-.3.4-.6.4-.9 0-.4-.1-.7-.4-.9-.2-.3-.5-.4-.9-.4s-.7.1-.9.4c-.3.2-.4.5-.4.9s.1.7.4.9c.2.3.5.4.9.4zm0-5c1 0 1.9.4 2.6 1.1.7.7 1.1 1.6 1.1 2.6 0 .5-.1 1.1-.4 1.8s-.5 1.3-.9 1.9c-.4.5-.7 1.1-1.1 1.6-.4.5-.7.9-.9 1.2l-.4.4c-.1-.1-.2-.3-.4-.5s-.5-.6-.9-1.2c-.4-.5-.8-1-1.1-1.6s-.7-1.1-.9-1.8c-.3-.7-.4-1.3-.4-1.8 0-1 .4-1.9 1.1-2.6S5 .7 6 .7z">
                             </path>
                            </svg> 
                          </span>
                          <span> <%= accommodation.city.name %>  </span>
                        </div>
                    </div>
                  </div>  
                  <h4 class="manage-my-item"><%= link_to 'Edit this accommodation', edit_accommodation_path(accommodation) %> |
                          <%= link_to 'Remove this product', @accommodation, method: :delete, data: { confirm: 'Are you sure?' } %> </h4>

                </div>  
              </div>
            </div>
          </div>        
        <% end %>
      <% end %>
    <%= link_to 'BACK', accommodations_path %>
</div>



