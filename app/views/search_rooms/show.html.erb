
	<h4 class="page-header"> <%= link_to 'Back', accommodations_path %>>> Search Results</h4>
    <div class="col-md-3">
    <div class="side-content">
      <div class="About">
        <h3 style="text-align: center; color: #6a5acd;">Welcome!</h3>
        <p style="text-align: justify; margin: 10px;">Here you find hotels that suit your needs.</p>
         <h4 class="page-header" ><%= link_to 'Add A Hotel', new_accommodation_path %> </h4>
      </div>
      <h4 class="page-header"> <%= link_to "My Hotels",my_accommodations_path %></h4>
    </div>
  </div>
  <div class="col-md-9">
  	<% if @search_room.find_rooms.empty? %>
		 <div class="empty-searh"><h4> No rooms were found which match your search criteria!</h4></div>
		<% else %>	
		<% @search_room.find_rooms.each do |s| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-3 ">
              <div class="thumbnail">
                <% if !s.pictures.blank? %>
                <%= link_to (image_tag s.pictures.first.image , class: 'image'), s.accommodation %>
                <% end %>
              </div>       
          </div>       
          <div class="col-sm-3 ">
             <div class="table-responsive">   
              <tr>
                <h4 ><%= s.accommodation.name %> </h4>
              </tr>              
              <tr>
                <span class="location">
                  <svg viewBox="0 0 12 12">
                    <path d="M6 5.7c.4 0 .7-.1.9-.4.3-.3.4-.6.4-.9 0-.4-.1-.7-.4-.9-.2-.3-.5-.4-.9-.4s-.7.1-.9.4c-.3.2-.4.5-.4.9s.1.7.4.9c.2.3.5.4.9.4zm0-5c1 0 1.9.4 2.6 1.1.7.7 1.1 1.6 1.1 2.6 0 .5-.1 1.1-.4 1.8s-.5 1.3-.9 1.9c-.4.5-.7 1.1-1.1 1.6-.4.5-.7.9-.9 1.2l-.4.4c-.1-.1-.2-.3-.4-.5s-.5-.6-.9-1.2c-.4-.5-.8-1-1.1-1.6s-.7-1.1-.9-1.8c-.3-.7-.4-1.3-.4-1.8 0-1 .4-1.9 1.1-2.6S5 .7 6 .7z">
                   </path>
                  </svg> 
                </span>
                <span> <%= s.accommodation.city.name %>  </span>
              </tr> 
            </div>    
          </div>  
        </div>
      </div>
    </div>        
    <% end %>
    <% end %>
  </div>